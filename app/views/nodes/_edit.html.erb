<%= simple_form_for @node do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :parent_id, as: :hidden %>
            
        
     
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.button :submit %>
          
      </div>

      <% end %>